@model List<Category>

    <div>
        <a
                asp-controller="Category"
                asp-action="CreateOneCategory" 
                class="btn btn-success">
            Create New Category
        </a>
    </div>

<ul class="list-group">
    @foreach(var category in Model)
    {
       <li class="list-group-item d-flex justify-content-between align-items-center">@category.CategoryName
        <a 
            class="btn btn-outline-warning"
            asp-controller="Category"
            asp-action="UpdateOneCategory"
            asp-route-id="@category.CategoryId">
            Update
        </a>
       </li>
    }  
</ul>

