@model Product
<div class="row ">
        <div class="card mx-auto" style="width: 18rem;">
        <img src="~/images/products/1.jpg" class="card-img-top" alt="...">
            <div class="card-body">
                <div>
                <div class="row">
                        <a asp-controller="Product" asp-action="GetOneProduct" asp-route-id=@Model.Id>@Model.Name</a>
                    </div>
                <div class="row text-danger">@Model.Price.ToString("c")</div>
                <div class="row text-danger">@Model.Description</div>
                <div class="row text-danger">@Model.AtCreated.Value.ToString("d")</div>
                </div>
            </div>
        </div>
</div>
