@model ProductForInsertionDto

<form 
    method="post"
    asp-area="Admin"
    asp-controller="Product"
    asp-action="CreateOneProduct" novalidate> 

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label for="CategoryId">Category</label>
        <select 
            asp-for="CategoryId"
            asp-items="@ViewBag.Categories"
            class="form-control">
        </select>
    </div>

    <div class="form-group my-3">
        <label for="ProductName">Product Name</label>
        <input type="text" id="ProductName" asp-for="ProductName" class="form-control"  aria-describedby="ProductHelp" placeholder="Product Name">
        <small id="ProductHelp" class="form-text text-muted">Product Name is a required field.</small>
        <span class="text-danger" asp-validation-for="ProductName"></span>
    </div>

    <div class="form-group my-3">
        <label for="Price">Price</label>
        <input type="text" id="Price" asp-for="Price" class="form-control" aria-describedby="PriceHelp" placeholder="Price">
        <small id="PriceHelp" class="form-text text-muted">Product Name is a required field.</small>
        <span class="text-danger" asp-validation-for="Price"></span>

    </div>

     <div class="form-group my-3">
        <label for="Description">Description</label>
        <input type="text" id="Description" asp-for="Description" class="form-control" placeholder="Description">
    </div>

    <div class="form-group my-3">
        <label for="ImageUrl">ImageUrl</label>
        <input type="text" id="ImageUrl" asp-for="ImageUrl" class="form-control" placeholder="ImageUrl">
    </div>

    <button class="btn btn-primary" 
            type="submit"> Create Product </button>
</form>